<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="@dimen/activity_horizontal_margin">

<android.support.v4.widget.NestedScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
	>

	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:animateLayoutChanges="true">

		<moe.feng.common.stepperview.VerticalStepperItemView
				android:id="@+id/stepper_creacion"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="24dp"
				app:step_index="1"
				app:step_title="Creaci贸n"
				app:step_summary="Creaci贸n exitosa"
				app:step_summary_done="Procesado"
				>
            <!--
            app:step_state="selected"
            -->

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

				<TextView
						android:id="@+id/idCreacion"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="12dp"/>

				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="16dp"
						android:orientation="horizontal">

					<Button
							android:id="@+id/button_next_0"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:backgroundTint="@color/material_blue_500"
							android:textColor="@android:color/white"
							android:text="@android:string/ok"
							android:visibility="gone"/>

					<Button
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:text="@android:string/cancel"
							android:visibility="gone"/>

				</LinearLayout>

			</LinearLayout>

		</moe.feng.common.stepperview.VerticalStepperItemView>

		<moe.feng.common.stepperview.VerticalStepperItemView
				android:id="@+id/stepper_abastecimiento"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				app:step_index="2"
				app:step_title="Abastecimiento"
				app:step_summary="Preparaci贸n exitosa del pedido"
			>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

				<TextView
						android:id="@+id/idAbastecimiento"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="12dp"/>

				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="16dp"
						android:orientation="horizontal">

					<Button
							android:id="@+id/button_next_1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:backgroundTint="@color/material_blue_500"
							android:textColor="@android:color/white"
							android:text="@android:string/ok"
							android:visibility="gone"/>

					<Button
							android:id="@+id/button_prev_1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:text="@android:string/cancel"
							android:visibility="gone"/>

					<Button
							android:id="@+id/button_test_error"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:backgroundTint="@color/material_red_500"
							android:textColor="@android:color/white"
							android:text="Set Step 1 Error Text"
							android:visibility="gone"/>

				</LinearLayout>

			</LinearLayout>

		</moe.feng.common.stepperview.VerticalStepperItemView>

		<moe.feng.common.stepperview.VerticalStepperItemView
				android:id="@+id/stepper_distribucion"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				app:step_index="3"
				app:step_title="Distribucion"
				app:step_summary="Pedido listo para su distribuci贸n"
				app:step_summary_done="Last step. Done"
				app:step_is_last="true">

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

				<TextView
						android:id="@+id/idDistribucion"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="12dp" />

				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="16dp"
						android:orientation="horizontal">

					<Button
							android:id="@+id/button_next_2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:backgroundTint="@color/material_blue_500"
							android:textColor="@android:color/white"
							android:text="@android:string/ok"
							android:visibility="gone"/>

					<Button
							android:id="@+id/button_prev_2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:text="@android:string/cancel"
							android:visibility="gone"/>

				</LinearLayout>

			</LinearLayout>

		</moe.feng.common.stepperview.VerticalStepperItemView>


		<moe.feng.common.stepperview.VerticalStepperItemView
			android:id="@+id/stepper_incidencia"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			app:step_index="4"
			app:step_title="Incidencia"
			app:step_summary="Peido con incidencia registrada"
			app:step_summary_done="Last step. Done"
			app:step_is_last="true">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/idIncidencia"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="12dp"
					android:text="@string/content_step_incidencia"/>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:orientation="horizontal">

					<Button
						android:id="@+id/button_next_3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:backgroundTint="@color/material_blue_500"
						android:textColor="@android:color/white"
						android:text="@android:string/ok"
						android:visibility="gone"/>

					<Button
						android:id="@+id/button_prev_3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="8dp"
						android:text="@android:string/cancel"
						android:visibility="gone"/>

				</LinearLayout>

			</LinearLayout>

		</moe.feng.common.stepperview.VerticalStepperItemView>

		<moe.feng.common.stepperview.VerticalStepperItemView
			android:id="@+id/stepper_finalizar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			app:step_index="5"
			app:step_title="Finalizar"
			app:step_summary="Pedido por entregar"
			app:step_summary_done="Last step. Done"
			app:step_is_last="true">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/idFinalizar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="12dp"/>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:orientation="horizontal">

					<Button
						android:id="@+id/button_next_4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:backgroundTint="@color/material_blue_500"
						android:textColor="@android:color/white"
						android:text="@android:string/ok"
						android:visibility="gone"/>

					<Button
						android:id="@+id/button_prev_4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="8dp"
						android:text="@android:string/cancel"
						android:visibility="gone"/>

				</LinearLayout>

			</LinearLayout>

		</moe.feng.common.stepperview.VerticalStepperItemView>

		<Button
				android:id="@+id/btn_change_point_color"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="24dp"
				android:text="Change point activated color"
				android:visibility="gone"/>

		<Button
				android:id="@+id/btn_change_done_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="24dp"
				android:text="Change point done icon"
				android:visibility="gone"/>

<!--		<TextView
			android:id="@+id/Nombte"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="12dp"/>!-->



	</LinearLayout>

