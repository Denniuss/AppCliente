<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/vino_grupo"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:padding="5sp"
        android:layout_width="200sp"
        android:layout_height="250sp" />

    <TextView
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:layout_marginStart="30sp"
        android:fontFamily="@font/ameliabasicbold"
        android:textSize="18sp"
        android:textColor="@color/negro"
        android:text="Pedidos por unidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/include1"
            android:visibility="gone"
            layout="@layout/content_table1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"></include>
        <include
            android:id="@+id/include2"
            android:visibility="gone"
            layout="@layout/content_table2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"></include>
        <include
            android:id="@+id/include3"
            android:visibility="gone"
            layout="@layout/content_table3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"></include>

    </RelativeLayout>



    <LinearLayout
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Pisco Quebranta: "
            android:textColor="@color/negro_"
            android:textSize="16sp"
            android:fontFamily="@font/ameliabasicbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="5sp"
            android:text="Medalle de Oro 2016 - CertificaciÃ³n HACPP "
            android:textColor="@color/negro_"
            android:textSize="14sp"
            android:fontFamily="@font/ameliabasic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_add_black_35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="20sp"
            android:text="35"
            android:textColor="@color/negro"
            android:textSize="25sp"
            android:fontFamily="@font/ameliabasicbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_remove_black_35dp"
            android:layout_marginStart="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:layout_marginStart="30sp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/ameliabasicbold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="AGREGAR CARRITO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>