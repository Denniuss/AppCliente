<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="200sp"
        android:layout_height="250sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:padding="5sp"
        android:src="@mipmap/vino_grupo" />

    <TextView
        android:id="@+id/tvTipoPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:fontFamily="@font/ameliabasicbold"
        android:gravity="center"
        android:text="Pedidos por unidad"
        android:textColor="@color/negro"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/include1"
            android:visibility="gone"
            layout="@layout/content_table1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"></include>
        <include
            android:id="@+id/include2"
            android:visibility="gone"
            layout="@layout/content_table2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"></include>
        <include
            android:id="@+id/include3"
            android:visibility="gone"
            layout="@layout/content_table3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"></include>

    </RelativeLayout>


    <TextView
        android:maxLines="2"
        android:id="@+id/tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:fontFamily="@font/ameliabasic"
        android:gravity="center"
        android:text="Pisco Quebranta: "
        android:textColor="@color/negro_"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_black_35dp" />

        <TextView
            android:id="@+id/tvCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:fontFamily="@font/ameliabasicbold"
            android:text="35"
            android:textColor="@color/negro"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/ivRestar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:src="@drawable/ic_remove_black_35dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAgregarCarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/ameliabasicbold"
        android:text="AGREGAR CARRITO"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>